<Window x:Class="PDFKawankasi.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PDFKawankasi.ViewModels"
        xmlns:local="clr-namespace:PDFKawankasi.Views"
        mc:Ignorable="d"
        Title="PDF Kawankasi - Privacy-First PDF Toolkit"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar (visible only in PDF Editor) -->
        <Menu Grid.Row="0" 
              Background="{StaticResource SurfaceBrush}"
              BorderBrush="{StaticResource BorderBrush}"
              BorderThickness="0,0,0,1">
            <Menu.Style>
                <Style TargetType="Menu">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedTool.ToolType}" Value="PdfEditor">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Menu.Style>
            
            <!-- Tools Menu -->
            <MenuItem Header="_Tools">
                <MenuItem Header="Merge PDF" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.MergePdf}"/>
                <MenuItem Header="Split PDF" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.SplitPdf}"/>
                <MenuItem Header="Compress PDF" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.CompressPdf}"/>
                <Separator/>
                <MenuItem Header="Extract Pages" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.ExtractPages}"/>
                <MenuItem Header="Delete Pages" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.DeletePages}"/>
                <MenuItem Header="Rotate PDF" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.RotatePdf}"/>
            </MenuItem>
            
            <!-- Edit Menu -->
            <MenuItem Header="_Edit">
                <MenuItem Header="Add Page Numbers" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.AddPageNumbers}"/>
                <MenuItem Header="Add Watermark" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.AddWatermark}"/>
                <MenuItem Header="Invert Colors" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.InvertColors}"/>
                <MenuItem Header="Change Background Colors" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.BackgroundColor}"/>
                <MenuItem Header="Remove Annotations" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.RemoveAnnotations}"/>
            </MenuItem>
            
            <!-- Image Menu -->
            <MenuItem Header="_Image">
                <MenuItem Header="Image to PDF" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.ImageToPdf}"/>
                <MenuItem Header="PDF to Image" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.PdfToJpg}"/>
                <MenuItem Header="PDF to Grayscale" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.PdfToGreyscale}"/>
            </MenuItem>
            
            <!-- Metadata Menu -->
            <MenuItem Header="_Metadata">
                <MenuItem Header="View Metadata" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.ViewMetadata}"/>
                <MenuItem Header="Edit Metadata" Command="{Binding SelectToolCommand}" CommandParameter="{x:Static local:ToolsMenuHelper.EditMetadata}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- Tools Grid View (hidden by default, PDF Editor is default) -->
            <ScrollViewer x:Name="ToolsScrollViewer"
                          Visibility="Collapsed"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="24">
                <ItemsControl ItemsSource="{Binding FilteredCategories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,24">
                                <!-- Category Header -->
                                <TextBlock Text="{Binding Name}" 
                                           Style="{StaticResource CategoryHeaderStyle}"/>
                                
                                <!-- Tools in this category -->
                                <ItemsControl ItemsSource="{Binding Tools}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource ToolCardStyle}"
                                                    Command="{Binding DataContext.SelectToolCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Width="180" Height="140"
                                                    Margin="0,0,12,12">
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Icon}" 
                                                               FontSize="32" 
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,8"/>
                                                    <TextBlock Text="{Binding Name}" 
                                                               Style="{StaticResource ToolNameStyle}"/>
                                                    <TextBlock Text="{Binding Subtitle}" 
                                                               Style="{StaticResource ToolSubtitleStyle}"
                                                               MaxWidth="160"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Tool Interface View (for standard tools) -->
            <Border Visibility="{Binding IsToolViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12"
                    Margin="24"
                    Padding="24">
                <!-- Visibility wrapper for non-PDF Editor tools -->
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTool.ToolType}" Value="PdfEditor">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tool Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,24">
                        <Button Content="â† Back to Tools"
                                Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Left"
                                Command="{Binding BackToGridCommand}"
                                Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SelectedTool.Icon}" 
                                       FontSize="40" 
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,16,0"/>
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedTool.Name}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontSize="28"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedTool.Subtitle}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- File Drop Zone (for non-Split tools or when no file loaded for Split) -->
                    <Border Grid.Row="1" 
                            Background="{StaticResource CardBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="12"
                            AllowDrop="True"
                            Drop="OnFileDrop"
                            DragOver="OnDragOver"
                            MinHeight="200"
                            Visibility="{Binding IsSplitPreviewVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <Grid>
                            <!-- Empty State -->
                            <StackPanel VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"
                                        Visibility="{Binding SelectedFiles.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                                <TextBlock Text="ðŸ“" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="Drag and drop files here"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="18"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="or"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           FontSize="14"
                                           HorizontalAlignment="Center"
                                           Margin="0,8"/>
                                <Button Content="Browse Files"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="OnBrowseFilesClick"
                                        HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Files List (for non-Split tools) -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          Visibility="{Binding SelectedFiles.Count, Converter={StaticResource NonZeroToVisibilityConverter}}"
                                          Padding="16">
                                <StackPanel>
                                    <ItemsControl ItemsSource="{Binding SelectedFiles}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource SurfaceBrush}"
                                                        CornerRadius="8"
                                                        Padding="12"
                                                        Margin="0,0,0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="ðŸ“„" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                                        <TextBlock Grid.Column="1" 
                                                                   Text="{Binding}" 
                                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <Button Grid.Column="2" 
                                                                Content="âœ•"
                                                                Style="{StaticResource SecondaryButtonStyle}"
                                                                Padding="8,4"
                                                                Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <Button Content="+ Add More Files"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Click="OnBrowseFilesClick"
                                            HorizontalAlignment="Left"
                                            Margin="0,8,0,0"
                                            Visibility="{Binding SelectedTool, Converter={StaticResource ToolTypeToNotSplitVisibilityConverter}}"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Split PDF Preview View -->
                    <Grid Grid.Row="1" 
                          Visibility="{Binding IsSplitPreviewVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- File Info and Options -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource CardBrush}" 
                                CornerRadius="8" 
                                Padding="16" 
                                Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- File Info -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“„" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding SelectedFiles[0]}" 
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="400"/>
                                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                                            <Run Text="{Binding PagePreviews.Count, Mode=OneWay}"/>
                                            <Run Text="pages"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Change File Button -->
                                <Button Grid.Column="1" 
                                        Content="ðŸ“‚ Change File"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="OnBrowseFilesClick"
                                        Padding="16,10"/>
                            </Grid>
                        </Border>

                        <!-- Page Previews Grid -->
                        <Border Grid.Row="1" 
                                Background="{StaticResource CardBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Selection Controls -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                                    <TextBlock Text="Select pages to split:" 
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontWeight="SemiBold"
                                               FontSize="16"
                                               VerticalAlignment="Center"
                                               Margin="0,0,24,0"/>
                                    <Button Content="Select All"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding SelectAllPagesCommand}"
                                            Padding="12,6"
                                            Margin="0,0,8,0"/>
                                    <Button Content="Deselect All"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding DeselectAllPagesCommand}"
                                            Padding="12,6"/>
                                </StackPanel>

                                <!-- Pages Grid -->
                                <ScrollViewer Grid.Row="1" 
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding PagePreviews}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border x:Name="PageCard"
                                                        Background="{StaticResource SurfaceBrush}"
                                                        BorderThickness="2"
                                                        CornerRadius="8"
                                                        Width="120"
                                                        Height="160"
                                                        Margin="0,0,12,12"
                                                        Cursor="Hand"
                                                        MouseLeftButtonUp="OnPagePreviewClick">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                                    <Setter Property="Background" Value="#2D3748"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- Page Icon/Preview -->
                                                        <Border Grid.Row="0" 
                                                                Background="{StaticResource CardBrush}"
                                                                CornerRadius="4"
                                                                Margin="8,8,8,4">
                                                            <Grid>
                                                                <!-- Thumbnail Image (shown when available) -->
                                                                <Image Source="{Binding Thumbnail}" 
                                                                       Stretch="Uniform"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Visibility="{Binding Thumbnail, Converter={StaticResource NullToCollapsedConverter}}"/>
                                                                <!-- Fallback Page Icon (shown when no thumbnail) -->
                                                                <TextBlock Text="ðŸ“„" 
                                                                           FontSize="40" 
                                                                           HorizontalAlignment="Center" 
                                                                           VerticalAlignment="Center"
                                                                           Opacity="0.7"
                                                                           Visibility="{Binding Thumbnail, Converter={StaticResource NullToVisibleConverter}}"/>
                                                                <!-- Selection Checkbox Indicator -->
                                                                <Border HorizontalAlignment="Right" 
                                                                        VerticalAlignment="Top"
                                                                        Margin="0,-4,-4,0"
                                                                        Width="24"
                                                                        Height="24"
                                                                        CornerRadius="12"
                                                                        Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                    <Border.Background>
                                                                        <SolidColorBrush Color="{StaticResource PrimaryColor}"/>
                                                                    </Border.Background>
                                                                    <TextBlock Text="âœ“" 
                                                                               Foreground="White" 
                                                                               FontWeight="Bold"
                                                                               HorizontalAlignment="Center" 
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                            </Grid>
                                                        </Border>

                                                        <!-- Page Number -->
                                                        <TextBlock Grid.Row="1" 
                                                                   Text="{Binding DisplayName}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   FontSize="11"
                                                                   TextAlignment="Center"
                                                                   Margin="4,4,4,8"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Split Options -->
                        <Border Grid.Row="2" 
                                Background="{StaticResource CardBrush}" 
                                CornerRadius="8" 
                                Padding="16" 
                                Margin="0,16,0,0">
                            <StackPanel>
                                <TextBlock Text="Split Options:" 
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,0,0,12"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton x:Name="SingleFileRadio"
                                                 GroupName="SplitMode"
                                                 IsChecked="{Binding SplitMode, Converter={StaticResource SplitModeToSingleFileConverter}}"
                                                 Margin="0,0,24,0"
                                                 Foreground="{StaticResource TextPrimaryBrush}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“„" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Single PDF file" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </RadioButton>
                                    <RadioButton x:Name="SeparateFilesRadio"
                                                 GroupName="SplitMode"
                                                 IsChecked="{Binding SplitMode, Converter={StaticResource SplitModeToSeparateFilesConverter}}"
                                                 Foreground="{StaticResource TextPrimaryBrush}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Separate files (one per page)" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </RadioButton>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                        <Button Content="Clear All"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding ClearFilesCommand}"
                                Margin="0,0,12,0"
                                IsEnabled="{Binding SelectedFiles.Count, Converter={StaticResource NonZeroToBoolConverter}}"/>
                        <!-- Process button for non-Split tools -->
                        <Button Content="Process Files"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding ProcessFilesCommand}"
                                IsEnabled="{Binding SelectedFiles.Count, Converter={StaticResource NonZeroToBoolConverter}}"
                                Visibility="{Binding IsSplitPreviewVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        <!-- Split button for Split tool -->
                        <Button Content="Split Selected Pages"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding ProcessFilesCommand}"
                                IsEnabled="{Binding HasSelectedPages}"
                                Visibility="{Binding IsSplitPreviewVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- PDF Editor View (for PDF Editor tool) -->
            <Grid Visibility="{Binding IsToolViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                  Margin="0">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTool.ToolType}" Value="PdfEditor">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Compact Back Button for PDF Editor (inline with PDF Editor toolbar) -->
                <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="8,4">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="â† Back"
                                Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Left"
                                Padding="8,4"
                                FontSize="11"
                                Command="{Binding BackToGridCommand}"/>
                        <Button Content="+ New Tab"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="8,4"
                                FontSize="11"
                                Margin="8,0,0,0"
                                Click="OnNewTabClick"
                                ToolTip="Open new tab (Ctrl+T)"/>
                    </StackPanel>
                </Border>

                <!-- PDF Editor Tab Control -->
                <TabControl Grid.Row="1"
                            x:Name="PdfTabControl"
                            Background="{StaticResource BackgroundBrush}"
                            BorderThickness="0"
                            Padding="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="TabBorder"
                                                Background="{StaticResource CardBrush}"
                                                BorderBrush="{StaticResource BorderBrush}"
                                                BorderThickness="1,1,1,0"
                                                CornerRadius="6,6,0,0"
                                                Padding="12,6"
                                                Margin="2,0,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Text="{TemplateBinding Header}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="12"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="180"
                                                           Margin="0,0,8,0"/>
                                                <Button Grid.Column="1"
                                                        Content="âœ•"
                                                        FontSize="11"
                                                        Padding="4,2"
                                                        VerticalAlignment="Center"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Foreground="{StaticResource TextMutedBrush}"
                                                        Cursor="Hand"
                                                        Click="OnTabCloseClick"
                                                        Tag="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Opacity" Value="0.6"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Opacity" Value="1"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="TabBorder" Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                                <Setter TargetName="TabBorder" Property="BorderThickness" Value="1,2,1,0"/>
                                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="TabBorder" Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <!-- Default Tab -->
                    <TabItem Header="Document 1">
                        <local:PdfEditorView/>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- Processing Overlay -->
            <Border Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                    Background="#CC000000">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar Width="300" Height="8"
                                 Value="{Binding ProgressValue}"
                                 Maximum="100"
                                 Foreground="{StaticResource PrimaryBrush}"
                                 Background="{StaticResource CardBrush}"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar (Hidden when PDF Editor is active) -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="12,6">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedTool.ToolType}" Value="PdfEditor">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="ðŸ”’ Local processing"
                           Foreground="{StaticResource TextMutedBrush}"
                           FontSize="10"
                           VerticalAlignment="Center"
                           ToolTip="All processing happens on your device"/>
            </Grid>
        </Border>
    </Grid>
</Window>
