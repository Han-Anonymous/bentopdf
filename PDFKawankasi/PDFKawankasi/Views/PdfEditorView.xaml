<UserControl x:Class="PDFKawankasi.Views.PdfEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PDFKawankasi.ViewModels"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}"
             d:DesignHeight="600" d:DesignWidth="900"
             Focusable="True"
             PreviewKeyDown="OnPreviewKeyDown"
             PreviewMouseWheel="OnPreviewMouseWheel">

    <UserControl.DataContext>
        <vm:PdfEditorViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Compact Toolbar (merged with navigation) -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side: File Actions and Clear -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="ðŸ“‚ Open"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding OpenPdfCommand}"
                            ToolTip="Open a PDF file"
                            Padding="8,4"
                            Margin="0,0,4,0"/>
                    <Button Content="ðŸ’¾ Save"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding SavePdfCommand}"
                            ToolTip="Save the edited PDF"
                            Padding="8,4"
                            Margin="0,0,4,0"
                            IsEnabled="{Binding IsPdfLoaded}"/>
                    <!-- Open saved file hyperlink -->
                    <Button Content="ðŸ“ Open Saved"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding OpenSavedFileCommand}"
                            ToolTip="{Binding LastSavedFilePath}"
                            Padding="8,4"
                            Margin="0,0,4,0"
                            Visibility="{Binding HasLastSavedFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    
                    <Separator Margin="8,0"/>
                    
                    <!-- Clear Ink Buttons -->
                    <Button Content="ðŸ§¹"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ClearCurrentPageInkCommand}"
                            ToolTip="Clear all ink from current page"
                            Padding="6,4"
                            Margin="0,0,4,0"
                            IsEnabled="{Binding IsPdfLoaded}"/>
                    <Button Content="ðŸ—‘ï¸"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ClearAllInkCommand}"
                            ToolTip="Clear all ink from all pages"
                            Padding="6,4"
                            Margin="0,0,4,0"
                            IsEnabled="{Binding IsPdfLoaded}"/>
                </StackPanel>

                <!-- Center: Annotation Tools -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Select Tool -->
                    <ToggleButton x:Name="SelectToolBtn"
                                  Content="ðŸ‘†"
                                  ToolTip="Select/Move"
                                  Style="{StaticResource ToolToggleButtonStyle}"
                                  IsChecked="{Binding IsSelectToolActive}"
                                  IsEnabled="{Binding IsPdfLoaded}"
                                  Padding="6,4"
                                  Margin="0,0,2,0"/>
                    
                    <!-- Highlight Tool -->
                    <ToggleButton x:Name="HighlightToolBtn"
                                  Content="ðŸ–Œï¸"
                                  ToolTip="Highlight text"
                                  Style="{StaticResource ToolToggleButtonStyle}"
                                  IsChecked="{Binding IsHighlightToolActive}"
                                  IsEnabled="{Binding IsPdfLoaded}"
                                  Padding="6,4"
                                  Margin="0,0,2,0"/>
                    
                    <!-- Draw Tool -->
                    <ToggleButton x:Name="DrawToolBtn"
                                  Content="âœï¸"
                                  ToolTip="Free-hand draw"
                                  Style="{StaticResource ToolToggleButtonStyle}"
                                  IsChecked="{Binding IsDrawToolActive}"
                                  IsEnabled="{Binding IsPdfLoaded}"
                                  Padding="6,4"
                                  Margin="0,0,2,0"/>
                    
                    <!-- Erase Tool -->
                    <ToggleButton x:Name="EraseToolBtn"
                                  Content="ðŸ§½"
                                  ToolTip="Erase ink strokes"
                                  Style="{StaticResource ToolToggleButtonStyle}"
                                  IsEnabled="{Binding IsPdfLoaded}"
                                  Padding="6,4"
                                  Margin="0,0,2,0"
                                  Click="OnEraseToolClick"/>
                    
                    <!-- Text Tool -->
                    <ToggleButton x:Name="TextToolBtn"
                                  Content="ðŸ“"
                                  ToolTip="Add text annotation"
                                  Style="{StaticResource ToolToggleButtonStyle}"
                                  IsChecked="{Binding IsTextToolActive}"
                                  IsEnabled="{Binding IsPdfLoaded}"
                                  Padding="6,4"
                                  Margin="0,0,2,0"/>
                    
                    <!-- Shape Tool -->
                    <ToggleButton x:Name="ShapeToolBtn"
                                  Content="ðŸ”·"
                                  ToolTip="Add shapes - PDFKawankasi.Models.ShapeAnnotation"
                                  Style="{StaticResource ToolToggleButtonStyle}"
                                  IsChecked="{Binding IsShapeToolActive}"
                                  IsEnabled="{Binding IsPdfLoaded}"
                                  Padding="6,4"
                                  Margin="0,0,2,0"/>
                    
                    <!-- Comment Tool -->
                    <ToggleButton x:Name="CommentToolBtn"
                                  Content="ðŸ’¬"
                                  ToolTip="Add comment - PDFKawankasi.Models.CommentAnnotation"
                                  Style="{StaticResource ToolToggleButtonStyle}"
                                  IsChecked="{Binding IsCommentToolActive}"
                                  IsEnabled="{Binding IsPdfLoaded}"
                                  Padding="6,4"
                                  Margin="0,0,2,0"/>
                    
                    <!-- Image Tool - Opens file picker immediately -->
                    <Button x:Name="ImageToolBtn"
                            Content="ðŸ–¼ï¸"
                            ToolTip="Add image (opens file picker)"
                            Style="{StaticResource SecondaryButtonStyle}"
                            IsEnabled="{Binding IsPdfLoaded}"
                            Padding="6,4"
                            Margin="0,0,2,0"
                            Click="OnAddImageClick"/>
                    
                    <!-- Redact Tool -->
                    <ToggleButton x:Name="RedactToolBtn"
                                  Content="â–ˆ"
                                  ToolTip="Redact/Black out content"
                                  Style="{StaticResource ToolToggleButtonStyle}"
                                  IsChecked="{Binding IsRedactToolActive}"
                                  IsEnabled="{Binding IsPdfLoaded}"
                                  Padding="6,4"
                                  Margin="0,0,2,0"
                                  Foreground="#E53E3E"/>
                    
                    <Separator Margin="8,0"/>
                    
                    <!-- Color Picker -->
                    <Border Width="24" Height="24" 
                            CornerRadius="4"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="2"
                            Cursor="Hand"
                            Margin="0,0,4,0"
                            MouseLeftButtonUp="OnColorPickerClick">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding SelectedColor}"/>
                        </Border.Background>
                    </Border>
                    
                    <!-- Pen Thickness Slider -->
                    <Slider Width="60"
                            Minimum="1"
                            Maximum="20"
                            Value="{Binding PenThickness}"
                            ToolTip="{Binding PenThickness, StringFormat=Thickness: {0:F1}px}"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding IsPdfLoaded}"/>
                </StackPanel>

                <!-- Right side: Zoom, Page Nav, View Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Panel toggles -->
                    <Button Content="â—€"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ToggleLeftPanelCommand}"
                            ToolTip="Toggle pages panel"
                            Padding="6,4"
                            Margin="0,0,2,0"/>
                    <Button Content="â–¶"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ToggleRightPanelCommand}"
                            ToolTip="Toggle annotations panel"
                            Padding="6,4"
                            Margin="0,0,4,0"/>
                    
                    <Separator Margin="4,0"/>
                    
                    <!-- Zoom controls -->
                    <Button Content="âž–"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ZoomOutCommand}"
                            ToolTip="Zoom out (Ctrl+-)"
                            Padding="6,4"
                            Margin="0,0,2,0"
                            IsEnabled="{Binding IsPdfLoaded}"/>
                    <TextBlock Text="{Binding ZoomLevel, StringFormat={}{0:P0}}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"
                               Width="40"
                               TextAlignment="Center"
                               FontSize="11"/>
                    <Button Content="âž•"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ZoomInCommand}"
                            ToolTip="Zoom in (Ctrl++)"
                            Padding="6,4"
                            Margin="0,0,2,0"
                            IsEnabled="{Binding IsPdfLoaded}"/>
                    
                    <!-- Fit buttons -->
                    <Button Content="â†”"
                            Style="{StaticResource SecondaryButtonStyle}"
                            ToolTip="Fit page width to screen"
                            Padding="6,4"
                            Margin="0,0,2,0"
                            IsEnabled="{Binding IsPdfLoaded}"
                            Click="OnFitToWidthClick"/>
                    <Button Content="â¬œ"
                            Style="{StaticResource SecondaryButtonStyle}"
                            ToolTip="Fit entire page to screen"
                            Padding="6,4"
                            Margin="0,0,2,0"
                            IsEnabled="{Binding IsPdfLoaded}"
                            Click="OnFitToPageClick"/>
                    
                    <!-- Dual page toggle -->
                    <ToggleButton Content="ðŸ“–"
                                  Style="{StaticResource ToolToggleButtonStyle}"
                                  IsChecked="{Binding IsDualPageMode}"
                                  ToolTip="Dual page view"
                                  Padding="6,4"
                                  Margin="0,0,4,0"
                                  IsEnabled="{Binding IsPdfLoaded}"/>
                    
                    <!-- Fullscreen toggle -->
                    <Button Content="â›¶"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ToggleFullscreenCommand}"
                            ToolTip="Toggle fullscreen (F11)"
                            Padding="6,4"
                            Margin="0,0,4,0"/>

                    <Separator Margin="4,0"/>

                    <!-- Page Navigation -->
                    <Button Content="â—€"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding PreviousPageCommand}"
                            ToolTip="Previous page"
                            Padding="6,4"
                            Margin="0,0,2,0"
                            IsEnabled="{Binding CanGoPrevious}"/>
                    <TextBlock VerticalAlignment="Center" FontSize="11">
                        <Run Text="{Binding CurrentPage}" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Run Text="/" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <Run Text="{Binding TotalPages}" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </TextBlock>
                    <Button Content="â–¶"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding NextPageCommand}"
                            ToolTip="Next page"
                            Padding="6,4"
                            Margin="2,0,0,0"
                            IsEnabled="{Binding CanGoNext}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPanelColumn" Width="180">
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="180"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLeftPanelVisible}" Value="False">
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition x:Name="RightPanelColumn" Width="220">
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="220"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRightPanelVisible}" Value="False">
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- Page Thumbnails Panel (Collapsible) -->
            <Border Grid.Column="0" 
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0"
                    Visibility="{Binding IsLeftPanelVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Pages"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Padding="8"/>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="4">
                        <ItemsControl ItemsSource="{Binding PageThumbnails}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White"
                                            BorderThickness="2"
                                            CornerRadius="4"
                                            Margin="0,0,0,6"
                                            Cursor="Hand"
                                            MouseLeftButtonUp="OnThumbnailClick">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCurrentPage}" Value="True">
                                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Image Source="{Binding Thumbnail}" 
                                                   Stretch="Uniform"
                                                   MaxHeight="120"
                                                   Margin="2"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                            <TextBlock Text="{Binding PageNumber}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Background="{StaticResource SurfaceBrush}"
                                                       Padding="2,1"
                                                       FontSize="10"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <TextBlock Grid.Row="1"
                               Text="Open a PDF to view pages"
                               Foreground="{StaticResource TextMutedBrush}"
                               FontSize="11"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Padding="8"
                               Visibility="{Binding IsPdfLoaded, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" 
                          Width="4"
                          Background="Transparent"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"/>

            <!-- PDF Canvas/Viewer Area -->
            <Border Grid.Column="2" 
                    Background="{StaticResource CardBrush}"
                    ClipToBounds="True">
                <Grid>
                    <!-- PDF Display with InkCanvas -->
                    <ScrollViewer x:Name="PdfScrollViewer"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding IsPdfLoaded, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}" Background="White">
                            <!-- PDF Page Image as background -->
                            <Image x:Name="PdfPageImage"
                                   Source="{Binding CurrentPageImage}"
                                   Stretch="None"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"/>
                            
                            <!-- Windows InkCanvas for native stylus/pen/touch support -->
                            <InkCanvas x:Name="PdfInkCanvas"
                                       Background="Transparent"
                                       Width="{Binding CanvasWidth}"
                                       Height="{Binding CanvasHeight}"
                                       EditingMode="{Binding InkEditingMode}"
                                       DefaultDrawingAttributes="{Binding InkDrawingAttributes}"
                                       StrokeCollected="OnInkStrokeCollected"
                                       StrokeErasing="OnInkStrokeErasing"
                                       MouseLeftButtonDown="OnInkCanvasMouseDown"
                                       MouseLeftButtonUp="OnInkCanvasMouseUp"
                                       MouseMove="OnInkCanvasMouseMove">
                                <!-- Existing non-ink annotations overlay -->
                                <InkCanvas.Children>
                                    <ItemsControl ItemsSource="{Binding CurrentPageAnnotations}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemContainerStyle>
                                            <Style>
                                                <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                                <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                            </Style>
                                        </ItemsControl.ItemContainerStyle>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <ContentPresenter Content="{Binding}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </InkCanvas.Children>
                            </InkCanvas>
                        </Grid>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsPdfLoaded, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TextBlock Text="âœï¸" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="PDF Editor"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Open a PDF to start annotating, drawing, and editing"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,24"/>
                        <Button Content="ðŸ“‚ Open PDF File"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding OpenPdfCommand}"
                                Padding="24,12"
                                FontSize="16"/>
                    </StackPanel>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="3" 
                          Width="4"
                          Background="Transparent"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Visibility="{Binding IsRightPanelVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Properties/Comments Panel (Collapsible) -->
            <Border Grid.Column="4" 
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Visibility="{Binding IsRightPanelVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Panel Header -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource CardBrush}"
                            Padding="8">
                        <StackPanel>
                            <TextBlock Text="Annotations"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="SemiBold"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding AnnotationCount, StringFormat={}{0} items}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="10"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Annotations List -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="4">
                        <ItemsControl ItemsSource="{Binding AllAnnotations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource CardBrush}"
                                            CornerRadius="4"
                                            Padding="6"
                                            Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding TypeIcon}"
                                                       FontSize="16"
                                                       VerticalAlignment="Top"
                                                       Margin="0,0,6,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding TypeName}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontWeight="SemiBold"
                                                           FontSize="11"/>
                                                <TextBlock Text="{Binding Description}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="10"
                                                           TextWrapping="Wrap"
                                                           MaxWidth="120"/>
                                                <TextBlock Text="{Binding PageInfo}"
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           FontSize="9"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <Button Grid.Column="2"
                                                    Content="âœ•"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Command="{Binding DataContext.DeleteAnnotationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="4,2"
                                                    FontSize="9"
                                                    VerticalAlignment="Top"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty Annotations State -->
                    <TextBlock Grid.Row="1"
                               Text="No annotations yet."
                               Foreground="{StaticResource TextMutedBrush}"
                               FontSize="10"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Padding="8"
                               Visibility="{Binding HasAnnotations, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Compact Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>

                <TextBlock Grid.Column="1"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="8,0">
                    <Run Text="Tool: "/>
                    <Run Text="{Binding CurrentToolName}" FontWeight="SemiBold"/>
                </TextBlock>

                <TextBlock Grid.Column="2"
                           Foreground="{StaticResource TextMutedBrush}"
                           FontSize="10"
                           VerticalAlignment="Center"
                           Margin="8,0">
                    <Run Text="{Binding ZoomLevel, StringFormat={}{0:P0}}"/>
                </TextBlock>

                <TextBlock Grid.Column="3"
                           Text="ðŸ”’ Local"
                           Foreground="{StaticResource TextMutedBrush}"
                           FontSize="10"
                           VerticalAlignment="Center"
                           ToolTip="All editing happens locally on your device"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
